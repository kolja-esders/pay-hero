<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scan_overlay"
    android:animateLayoutChanges="true">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_pay_hero_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/payhero_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payhero_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:id="@+id/processing_status"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/status_background_processing"
        android:textColor="@android:color/black"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/payment_white_trans_128dp"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/payment_icon" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/list_white_trans_128dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/list_icon" />
</RelativeLayout>
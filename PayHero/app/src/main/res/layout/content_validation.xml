<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_validation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.pietro.team.payhero.ValidationActivity"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    tools:showIn="@layout/activity_validation"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp">

        <Button
            android:drawableRight="@drawable/send_white_24dp"
            android:text="Bestätigen  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/holo_green_dark"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_gravity="center"
            android:indeterminate="true"
            android:layout_toRightOf="@id/button"
            android:layout_alignBottom="@id/button"
            />
    </LinearLayout>

    <EditText
        android:text="DE23 3847 2784 8374 2837 43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibanEdit"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/nameEdit"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:hint="IBAN MISSING"
        android:background="@android:color/transparent" />

    <EditText
        android:text="23,45€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountEdit"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50sp"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textStyle="normal|bold"
        android:layout_centerHorizontal="true"
        android:background="@color/bgColorAmount"
        android:layout_below="@+id/ibanEdit"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameEdit"
        android:hint="Recipient"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profileImage"
        android:inputType="textPersonName"
        android:background="@android:color/transparent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/person_black_256dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
